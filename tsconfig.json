{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveValueImports": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "types": [
      "node",
      "ziggy-js",
      "vite/client",
      "unplugin-vue-define-options",
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue"
, "resources/js/ziggy.ts"  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public"
  ]
}